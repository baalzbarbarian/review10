                                                            <option value="No Sub">No Sub</option>
                                                            <option value="Thuyết Minh">Thuyết Minh</option>

                                                        </select>
                                                    </div>

                                                    <div class="col-12 col-sm-6 col-lg-3">
                                                        <input type="text" class="form__input"
                                                            placeholder="Hãng sản xuất phim" name="director" value="">
                                                    </div>

                                                    <div class="col-12 col-sm-6  ">
                                                        <label class="mr-sm-2 sr-only"
                                                            for="inlineFormCustomSelect">Preference</label>
                                                        <select class="custom-select mr-sm-2 form__input"
                                                            id="inlineFormCustomSelect" name="country">
                                                            <option selected disabled hidden>Quốc gia</option>
                                                            <option value="Việt Nam">Việt Nam</option>
                                                            <option value="Mỹ">Mỹ</option>
                                                            <option value="Anh">Anh</option>
                                                            <option value="Nhật">Nhật</option>
                                                            <option value="Trung Quốc">Trung Quốc</option>
                                                            <option value="Mỹ">Hàn Quốc</option>
                                                            <option value="Khác">Khác</option>
                                                        </select>
                                                    </div>

                                                    <div class="col-12 col-sm-6  ">
                                                        <label class="mr-sm-2 sr-only"
                                                            for="inlineFormCustomSelect2">Preference</label>
                                                        <select class="custom-select mr-sm-2 form__input"
                                                            id="inlineFormCustomSelect" name="category_id">
                                                            <option aria-readonly="true">Thể loại</option>
                                                            <% data.forEach(function(cats){ %>
                                                                <option value="<%-cats._id%>">
                                                                    <%-cats.name%>
                                                                </option>
                                                                <% }) %>
                                                        </select>
                                                    </div>


